{% extends 'base.html.twig' %}

{% block title %}continueGame{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <a href="/main">Volver</a>  
    <h1>Continuar partida {{codigoJuego}}</h1>
    <p>Elige una carta:</p>
    <ul>
        {% for card in playerCards %}
            <li>
                Carta: {{ card.number }} de {{ card.suit }}
                <form method="GET" action="{{ path('selectCard2') }}">
                    <input type="hidden" name="idCard" value="{{ card.id }}">
                    <input type="hidden" name="idGame" value="{{ codigoJuego }}">
                    <button type="submit">Seleccionar</button>
                </form>
            </li>
        {% endfor %}
    </ul>
    

</div>
{% endblock %}